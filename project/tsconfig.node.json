{
  "compilerOptions": {
    "strict": true, // Enforce strict type-checking
    "forceConsistentCasingInFileNames": true, // Avoid casing issues across OS
    "module": "CommonJS",
    "esModuleInterop": true,
    "target": "ES2020",
    "lib": ["ES2020"], // Replace ES2023 with ES2020 (safe & supported)
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "include": ["vite.config.ts"]
}
